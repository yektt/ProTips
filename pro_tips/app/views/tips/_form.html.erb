<%= form_for(tip, html: { class: 'col-lg-10 offset-lg-1' }) do |form| %>
  <% if tip.errors.any? %>
    <%= render partial: 'model_errors', locals: { model: tip } %>
  <% end %>

  <fieldset class="form-group row">
    <%= form.label :title, class: 'col-md-2 col-form-label' %>
    <div class="col-md-10">
      <%= form.text_field :title, class: 'form-control' %>
      <small class="form-text text-muted"><%= translate('notice_for_tip_title') %></small>
    </div>
  </fieldset>

  <fieldset class="form-group row">
    <%= form.label :body, class: 'col-md-2 col-form-label' %>
    <div class="col-md-10">
      <%= form.text_area :body, class: 'form-control', rows: 7 %>
    </div>
  </fieldset>

  <fieldset class="form-group row">
    <%= form.label(translate('user'), for: 'tip_user_id', class: 'col-md-2 col-form-label') %>
    <div class="col-md-10">
      <%= form.label :user_id, current_user.name, class:'form-control' %>
    </div>
  </fieldset>

  <div class="form-group row d-flex flex-row-reverse">
    <div class="col-md-10">
      <%= form.submit class: 'btn btn-primary btn-block mb-2' %>
    </div>
    <div class="col-md-2">
      <%= link_to translate('cancel'), account_path, class: 'btn btn-light btn-block' %>
    </div>
  </div>
<% end %>
