<div class="col-md-6 offset-md-3">
  <h1 class="text-center display-4 m-5">Log in</h1>
  <% if(flash.any?) %>
    <div class="form-group row alert alert-danger">
      <% flash.each do |name, message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <%= form_tag(sessions_path) do %>
    
    <div class="form-group row">
      <%= label(:email, nil, class: 'col-sm-2 col-form-label pl-0') %>
      <%= text_field_tag(:email, nil, class: 'form-control', placeholder: 'e.g. me@epfl.ch') %>
    </div>

    <div class="form-group row">
      <%= label(:password, nil, class: 'col-sm-2 col-form-label pl-0') %>
      <%= password_field_tag(:password, nil, class: 'form-control') %>
    </div>

    <div class="form-group row">
        <%= submit_tag('Log in', class: 'btn btn-primary btn-block') %>
    </div>
  <% end %>
</div>
